              %section.col.col-6
                %label.label E-mail
                %label.input
                  %i.icon-append.icon-envelope-alt
                  %input#email{:name => "email", :type => "email"}/
            %section
              %label.label Subject
              %label.input
                %i.icon-append.icon-tag
                %input#subject{:name => "subject", :type => "text"}/
            %section
              %label.label Message
              %label.textarea
                %i.icon-append.icon-comment
                %textarea#message{:name => "message", :rows => "4"}
          %footer
            %button.button{:type => "submit"} Send message
          .message
            %i.icon-ok
            %p Your message was successfully sent!
